{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "src/common/components/*"
      ],
      "@/modules/*": [
        "src/common/modules/*"
      ],
      "@/context/*": [
        "src/common/context/*"
      ],
      "@/graphql/*": [
        "src/common/graphql/*"
      ],
      "@/hooks/*": [
        "src/common/hooks/*"
      ],
      "@/mocks/*": [
        "src/common/mocks/*"
      ],
      "@/styles/*": [
        "src/common/styles/*"
      ],
      "@/models/*": [
        "src/common/models/*"
      ],
      "@/services/*": [
        "src/common/services/*"
      ],
      "@/utils/*": [
        "src/common/utils/*"
      ],
      "@/images/*": [
        "public/images/*"
      ],
      "@/constants": [
        "src/common/constants/constants"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
